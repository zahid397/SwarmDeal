<div id="deal-card" class="card deal-wrapper" style="display: none;">
  <div class="top-row">
    <span class="badge">ðŸ”¥ Hot Deal</span>
    <span class="discount">20% OFF</span>
  </div>

  <h2 id="d-title">Product</h2>
  <p id="d-cat">Category</p>
  
  <div class="stats">
    <div><span class="lbl">Price</span><span id="d-price" class="val">$0</span></div>
    <div style="border-left: 1px solid #e2e8f0;"></div>
    <div><span class="lbl">Members</span><span id="d-mem" class="val">0</span></div>
  </div>

  <button id="create-btn">ðŸš€ Launch Group Buy</button>
</div>

<style>
  .deal-wrapper { padding: 1.5rem; animation: pop 0.5s ease; border: 1px solid var(--primary); }
  .top-row { display: flex; justify-content: space-between; margin-bottom: 0.5rem; }
  .badge { background: #fee2e2; color: #ef4444; font-size: 0.75rem; padding: 4px 10px; border-radius: 20px; font-weight: 700; }
  .discount { color: var(--success); font-weight: 700; }
  h2 { margin: 0; font-size: 1.6rem; }
  #d-cat { color: var(--text-muted); font-size: 0.9rem; margin: 0 0 1.5rem; }
  .stats { display: flex; justify-content: space-around; background: #f8fafc; padding: 1rem; border-radius: 12px; margin-bottom: 1.5rem; border: 1px solid #e2e8f0; }
  .lbl { display: block; font-size: 0.75rem; color: var(--text-muted); font-weight: 600; text-transform: uppercase; }
  .val { font-size: 1.4rem; font-weight: 800; }
  button { width: 100%; background: var(--primary); color: white; padding: 14px; border: none; border-radius: 12px; font-weight: 600; font-size: 1rem; cursor: pointer; }
  button:hover { background: var(--primary-hover); }
  @keyframes pop { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

<script>
  import { api } from '../utils/api.js';

  const card = document.getElementById('deal-card');
  const btn = document.getElementById('create-btn');
  let activeDeal = null;

  window.addEventListener('deal-found', (e) => {
    activeDeal = e.detail;
    document.getElementById('d-title').innerText = activeDeal.productName;
    document.getElementById('d-cat').innerText = activeDeal.category || 'General';
    document.getElementById('d-price').innerText = `$${activeDeal.price}`;
    document.getElementById('d-mem').innerText = activeDeal.targetMembers;
    card.style.display = 'block';
  });

  btn.onclick = async () => {
    btn.innerText = 'Creating...';
    
    // âœ… FIX: Dynamic Import for Production Safety
    try {
      await api.post('/groups/create', { ...activeDeal });
      
      const { default: confetti } = await import('canvas-confetti');
      confetti({ particleCount: 100, spread: 70, origin: { y: 0.6 } });
      
      alert('ðŸŽ‰ Group Created Successfully!');
      card.style.display = 'none';
    } catch (e) {
      // Demo Mode
      const { default: confetti } = await import('canvas-confetti');
      confetti();
      alert('ðŸŽ‰ (Demo) Group Created Successfully!');
      card.style.display = 'none';
    } finally { 
      btn.innerText = 'ðŸš€ Launch Group Buy'; 
    }
  }
</script>
