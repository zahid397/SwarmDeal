---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ChatBox from '../components/ChatBox.astro';
import DealCard from '../components/DealCard.astro';
---

<Layout title="SwarmDeal - AI Group Buying">
  <div class="container">
    <Navbar />

    <main class="grid-layout">
      <div class="hero">
        <span class="pill">‚ú® New: AI Negotiation</span>
        <h1>Group Buying,<br><span class="highlight">Supercharged.</span></h1>
        <p class="sub">Stop overpaying. Join forces with strangers to negotiate bulk discounts. Secure & AI powered.</p>
        
        <div class="trust">
          <span>üõ°Ô∏è Escrow</span><span>‚ö° Instant</span><span>ü§ñ Gemini AI</span>
        </div>

        <div style="margin-top: 2rem; width: 100%;">
          <DealCard />
        </div>
      </div>

      <div>
        <ChatBox />
      </div>
    </main>
  </div>
</Layout>

<style>
  .grid-layout { display: grid; grid-template-columns: 1.1fr 0.9fr; gap: 4rem; align-items: center; min-height: 80vh; }
  @media (max-width: 900px) { .grid-layout { grid-template-columns: 1fr; gap: 3rem; text-align: center; } }
  
  .pill { background: #EEF2FF; color: var(--primary); font-size: 0.8rem; font-weight: 600; padding: 6px 12px; border-radius: 20px; border: 1px solid #E0E7FF; }
  h1 { font-size: 3.5rem; font-weight: 800; line-height: 1.1; margin: 1.5rem 0; letter-spacing: -1px; }
  .highlight { color: var(--primary); }
  .sub { font-size: 1.2rem; color: var(--text-muted); margin-bottom: 2rem; line-height: 1.6; }
  .trust { display: flex; gap: 1rem; font-weight: 600; color: var(--text-main); font-size: 0.9rem; margin-bottom: 2rem; }
  @media (max-width: 900px) { .trust { justify-content: center; } }
</style>
